{
    "manifest_version": 3,
    "name": "Ewallet Extension",
    "version": "1.0.0",
    "description": "A Chrome extension for the Ewallet app",
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "permissions": ["storage"],
    "host_permissions": ["http://*/*", "https://*/*"],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "content_security_policy": {
  "extension_pages": "script-src 'self'; object-src 'self'"
}
  }
  